

  <div class="row">
    <div class="col-6 sign-up-background-2" style="height: 650px;">
      <% if rand(1..2) == 1 %>
        <%= image_tag "cafe-1.jpg", class: "background-art-1" %>
      <% else %>
        <%= image_tag "cafe-2.jpg", class: "background-art-2" %>
      <% end %>
    </div>
    <div class="col-6" style="height: 650px;">
      <div class="container registration-container main-container mt-4 p-4">
        <div class="header text-center">
          <h1 class="mb-4">Squidy</h1>
          <h6 class="font-italic mb-3">Sign up to explore great cafes and workspaces around the globe <span class="font-normal">ğŸŒğŸŒğŸŒ</span></h6>
        </div>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :username, placeholder: "ilovesquidi" %>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
            <%= f.input :password,
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :login_photo, input_html: { class: 'd-none' }, label_html: { class: 'upload-photo'}, label: 'ğŸ“· Upload a profile photo ğŸ¦§', as: :file %>
          </div>
          <div class="form-actions btn btn-lg btn-primary btn-block btn-register">
            <%= f.button :submit, "Sign up", class: 'btn-submit' %>
          </div>
        <% end %>
      </div>
      <div class="container registration-container d-flex justify-content-center mt-5">
        <p class="mr-2">Have an account?</p>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

