document.getElementById("vote-total-<%= @place.id %>").innerText = <%= @place.weighted_score %>
<% if current_user.liked? @place %>
  document.getElementById("upvote-btn-<%= @place.id %>").classList.add("disabled-btn")
  document.getElementById("downvote-btn-<%= @place.id %>").classList.remove("disabled-btn")
<% elsif current_user.disliked? @place %>
  document.getElementById("downvote-btn-<%= @place.id %>").classList.add("disabled-btn")
  document.getElementById("upvote-btn-<%= @place.id %>").classList.remove("disabled-btn")
<% end %>
