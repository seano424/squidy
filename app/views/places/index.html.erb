<div id="content" class="row">
  <div class="col-4 p-0" style="overflow-y: scroll; height: 90vh;">
    <%= render "places" %>
  </div>
  <div class="col-8 p-0">
    <div class="hide-content reviews-content" id="reviews-content">
      <div class="d-flex back-map hide-content w-100 align-items-center mt-3 ml-3" id="back-map">
        <%= button_tag(type: 'button', id: "back-btn") do  %>
          <i class="far fa-hand-point-left"></i>
          Back to map
        <% end %>
        <!-- <p class="pl-2 w-100 mt-3">Back to map</p> -->
      </div>
      <div id="place-reviews"></div>
    </div>
    <div id="map" class="map" style="width: 100%; height: 100vh;" data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>